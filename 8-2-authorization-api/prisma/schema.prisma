generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserModel {
  id        Int          @id @default(autoincrement())
  email     String       @unique
  password  String
  name      String
  type      String       @default("provider")
  promos    PromoModel[]
  ItemModel ItemModel[]
}

model PromoModel {
  id           Int       @id @default(autoincrement())
  title        String
  description  String
  creationDate DateTime  @default(now())
  creator      UserModel @relation(fields: [creatorId], references: [id])
  creatorId    Int
  status       String    @default("new")
  creatorEmail String    @default("email")
}

model ItemModel {
  id           Int             @id @default(autoincrement())
  name         String
  description  String
  price        Int
  storeCount   Int             @default(0)
  creator      UserModel       @relation(fields: [creatorId], references: [id])
  creatorId    Int             @default(0)
  categories   CategoryModel[]
  ItemCategory ItemCategory[]
}

model CategoryModel {
  id           Int            @id @default(autoincrement())
  name         String
  items        ItemModel[]
  ItemCategory ItemCategory[]
}

model ItemCategory {
  itemId     Int
  categoryId Int

  item     ItemModel     @relation(fields: [itemId], references: [id])
  category CategoryModel @relation(fields: [categoryId], references: [id])

  @@unique([itemId, categoryId])
}
